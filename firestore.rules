rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public creation of user documents, but do not allow reads or updates to the password hash.
    match /users/{userId} {
      allow create: if request.resource.data.keys().hasOnly(['name', 'passwordHash']);
      allow read, update, delete: if false; // Disallow reading/updating user documents directly
    }

    // Allow anyone to read the users collection to check for existing names.
    // This is required for signup validation.
    // Restrict the query to only check the 'name' field.
    match /users/{userId} {
        allow list: if request.query.resource.__name__[1] == 'users' && request.query.limit <= 10;
    }

    // Allow authenticated users to manage their own collections and photos.
    match /collections/{collectionId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userName;
    }
  }
}
